<div id="mw-wrapper" class="mw-wrapper">
	<!-- Header -->
	<header id="mw-header" class="mw-header">
		<div class="mw-header-container">
			<!-- Logo -->
			<div class="mw-logo">
				<a href="{{{link-mainpage}}}" class="mw-logo-link">
					{{#data-logos}}
						{{#icon}}<img src="{{.}}" alt="" class="mw-logo-icon">{{/icon}}
						{{^icon}}{{#1x}}<img src="{{.}}" alt="" class="mw-logo-icon">{{/1x}}{{/icon}}
					{{/data-logos}}
					<span class="mw-logo-text">IIWiki</span>
				</a>
			</div>

			<!-- Search -->
			<div class="mw-search-area">
				<form action="{{{page-action-search}}}" id="searchform" class="mw-search-form">
					<input type="hidden" name="title" value="Special:Search">
					<input type="search" name="search" id="searchInput" placeholder="Search IIWiki..." class="mw-search-input" autocomplete="off">
					<button type="submit" class="mw-search-button">Search</button>
				</form>
			</div>

			<!-- Personal tools -->
			<nav class="mw-personal-tools">
				{{#data-portlets}}
					{{#data-personal}}
						<ul class="mw-personal-tools-list">
							{{{html-items}}}
						</ul>
					{{/data-personal}}
				{{/data-portlets}}
			</nav>
		</div>
	</header>

	<div class="mw-body-container">
		<!-- Sidebar -->
		<aside id="mw-sidebar" class="mw-sidebar">
			{{#data-portlets-sidebar.data-portlets-first}}
			<nav class="mw-portlet" id="{{id}}">
				<h3 class="mw-portlet-heading">{{label}}</h3>
				<ul class="mw-portlet-list">
					{{{html-items}}}
				</ul>
			</nav>
			{{/data-portlets-sidebar.data-portlets-first}}

			{{#data-portlets-sidebar.array-portlets-rest}}
			<nav class="mw-portlet" id="{{id}}">
				<h3 class="mw-portlet-heading">{{label}}</h3>
				<ul class="mw-portlet-list">
					{{{html-items}}}
				</ul>
			</nav>
			{{/data-portlets-sidebar.array-portlets-rest}}

			{{#data-portlets}}
				{{#data-tb}}
				<nav class="mw-portlet" id="{{id}}">
					<h3 class="mw-portlet-heading">{{label}}</h3>
					<ul class="mw-portlet-list">
						{{{html-items}}}
					</ul>
				</nav>
				{{/data-tb}}
			{{/data-portlets}}
		</aside>

		<!-- Main content -->
		<main id="mw-content" class="mw-content">
			<!-- Content tabs -->
			<nav class="mw-content-tabs">
				{{#data-portlets}}
					{{#data-namespaces}}
					<ul class="mw-tabs mw-tabs-namespaces">
						{{{html-items}}}
					</ul>
					{{/data-namespaces}}
				{{/data-portlets}}

				<div class="mw-tabs-right">
					{{#data-portlets}}
						{{#data-views}}
						<ul class="mw-tabs mw-tabs-views">
							{{{html-items}}}
						</ul>
						{{/data-views}}
					{{/data-portlets}}

					{{#data-portlets}}
						{{#data-actions}}
						{{^is-empty}}
						<div class="mw-dropdown">
							<button class="mw-dropdown-toggle">More â–¾</button>
							<ul class="mw-dropdown-menu">
								{{{html-items}}}
							</ul>
						</div>
						{{/is-empty}}
						{{/data-actions}}
					{{/data-portlets}}
				</div>
			</nav>

			<!-- Page heading -->
			<div class="mw-page-header">
				{{#data-indicators}}
				<div class="mw-indicators">{{{html}}}</div>
				{{/data-indicators}}
				<h1 id="firstHeading" class="mw-first-heading">{{{html-title}}}</h1>
			</div>

			{{#data-sitenotice}}
			<div id="siteNotice" class="mw-sitenotice">{{{html}}}</div>
			{{/data-sitenotice}}

			<!-- Body content -->
			<div id="bodyContent" class="mw-body-content">
				{{{html-body-content}}}

				{{#html-catlinks}}
				<div id="catlinks" class="mw-catlinks">{{{html-catlinks}}}</div>
				{{/html-catlinks}}
			</div>
		</main>
	</div>

	<!-- Footer -->
	<footer id="mw-footer" class="mw-footer">
		<div class="mw-footer-container">
			{{#data-footer.array-items}}
			<ul class="mw-footer-list">
				{{#array-items}}
				<li>{{{html}}}</li>
				{{/array-items}}
			</ul>
			{{/data-footer.array-items}}
		</div>
	</footer>
</div>
