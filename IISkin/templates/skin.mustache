<div id="mw-wrapper" class="iiskin">
	<!-- Top Header Bar -->
	<header id="iiskin-header" class="iiskin-header">
		<div class="iiskin-header-left">
			<!-- Logo -->
			<a href="{{{link-mainpage}}}" class="iiskin-logo" title="IIWiki - SimFic & Alt-History Encyclopedia">
				{{#data-logos}}
					{{#icon}}<img src="{{.}}" alt="IIWiki" class="iiskin-logo-img">{{/icon}}
					{{^icon}}{{#1x}}<img src="{{.}}" alt="IIWiki" class="iiskin-logo-img">{{/1x}}{{/icon}}
				{{/data-logos}}
				<span class="iiskin-logo-text">IIWiki</span>
			</a>
		</div>

		<!-- Search -->
		<div class="iiskin-header-center">
			<form action="{{{page-action-search}}}" id="searchform" class="iiskin-search">
				<input type="hidden" name="title" value="Special:Search">
				<span class="iiskin-search-icon">üîç</span>
				<input type="search" name="search" id="searchInput" placeholder="Search worlds, nations, characters..." class="iiskin-search-input" autocomplete="off">
				<button type="submit" class="iiskin-search-btn">Search</button>
			</form>
		</div>

		<!-- User Area with Notifications -->
		<div class="iiskin-header-right">
			<!-- Notifications (Echo) -->
			{{#data-portlets}}
				{{#data-notifications}}
				<div id="iiskin-notifications" class="iiskin-notifications">
					{{{html-items}}}
				</div>
				{{/data-notifications}}
			{{/data-portlets}}

			<!-- User Menu -->
			<nav class="iiskin-user-nav">
				{{#data-portlets}}
					{{#data-personal}}
					<ul class="iiskin-user-links">
						{{{html-items}}}
					</ul>
					{{/data-personal}}
				{{/data-portlets}}
			</nav>
		</div>
	</header>

	<!-- Main Layout -->
	<div class="iiskin-main">
		<!-- Sidebar -->
		<aside id="iiskin-sidebar" class="iiskin-sidebar">
			<div class="iiskin-sidebar-inner">
				<!-- Worldbuilding Quick Links -->
				<div class="iiskin-sidebar-section iiskin-quick-create">
					<a href="/wiki/Special:CreatePage" class="iiskin-create-btn">+ Create Article</a>
				</div>

				{{#data-portlets-sidebar.data-portlets-first}}
				<nav class="iiskin-nav-section" id="{{id}}">
					<h3 class="iiskin-nav-heading">{{label}}</h3>
					<ul class="iiskin-nav-list">{{{html-items}}}</ul>
				</nav>
				{{/data-portlets-sidebar.data-portlets-first}}

				{{#data-portlets-sidebar.array-portlets-rest}}
				<nav class="iiskin-nav-section" id="{{id}}">
					<h3 class="iiskin-nav-heading">{{label}}</h3>
					<ul class="iiskin-nav-list">{{{html-items}}}</ul>
				</nav>
				{{/data-portlets-sidebar.array-portlets-rest}}

				{{#data-portlets}}
					{{#data-tb}}
					<nav class="iiskin-nav-section iiskin-tools" id="{{id}}">
						<h3 class="iiskin-nav-heading">{{label}}</h3>
						<ul class="iiskin-nav-list">{{{html-items}}}</ul>
					</nav>
					{{/data-tb}}
				{{/data-portlets}}
			</div>
		</aside>

		<!-- Content Area -->
		<main id="iiskin-content" class="iiskin-content">
			<!-- Page Actions Bar -->
			<div class="iiskin-page-actions">
				<div class="iiskin-tabs-left">
					{{#data-portlets}}
						{{#data-namespaces}}
						<ul class="iiskin-tabs">{{{html-items}}}</ul>
						{{/data-namespaces}}
					{{/data-portlets}}
				</div>
				<div class="iiskin-tabs-right">
					{{#data-portlets}}
						{{#data-views}}
						<ul class="iiskin-tabs iiskin-views">{{{html-items}}}</ul>
						{{/data-views}}
					{{/data-portlets}}
					{{#data-portlets}}
						{{#data-actions}}
						{{^is-empty}}
						<div class="iiskin-more-menu">
							<button class="iiskin-more-btn">More ‚ñæ</button>
							<ul class="iiskin-more-dropdown">{{{html-items}}}</ul>
						</div>
						{{/is-empty}}
						{{/data-actions}}
					{{/data-portlets}}
				</div>
			</div>

			<!-- Article Header -->
			<header class="iiskin-article-header">
				{{#data-indicators}}
				<div class="iiskin-indicators">{{{html}}}</div>
				{{/data-indicators}}
				<h1 id="firstHeading" class="iiskin-title">{{{html-title}}}</h1>
			</header>

			{{#data-sitenotice}}
			<div id="siteNotice" class="iiskin-notice">{{{html}}}</div>
			{{/data-sitenotice}}

			<!-- Article Body -->
			<article id="bodyContent" class="iiskin-article">
				{{{html-body-content}}}
			</article>

			{{#html-catlinks}}
			<nav id="catlinks" class="iiskin-categories">{{{html-catlinks}}}</nav>
			{{/html-catlinks}}
		</main>
	</div>

	<!-- Footer -->
	<footer id="iiskin-footer" class="iiskin-footer">
		<div class="iiskin-footer-inner">
			<div class="iiskin-footer-brand">
				<span class="iiskin-footer-logo">IIWiki</span>
				<span class="iiskin-footer-tagline">SimFic & Alt-History Encyclopedia</span>
			</div>
			<div class="iiskin-footer-links">
				{{#data-footer.array-items}}
				<ul class="iiskin-footer-list">
					{{#array-items}}
					<li>{{{html}}}</li>
					{{/array-items}}
				</ul>
				{{/data-footer.array-items}}
			</div>
		</div>
	</footer>
</div>
