<div id="p-personal" class="iiskin-personal-tools" role="navigation" aria-label="{{msg-personaltools}}">
	<div class="iiskin-personal-tools-inner">
		   {{! User notifications removed from dropdown, handled in header }}

		{{! User menu }}
		<div class="iiskin-user-menu">
			{{#data-portlets}}
				{{#data-user-menu}}
				<div id="{{id}}" class="{{class}} iiskin-user-dropdown">
					<input type="checkbox" id="iiskin-user-menu-checkbox" class="iiskin-dropdown-checkbox" aria-hidden="true">
					<label for="iiskin-user-menu-checkbox" class="iiskin-user-toggle" id="{{id}}-label" {{{html-user-language-attributes}}}>

						<span class="iiskin-user-name">{{label}}</span>
						<span class="iiskin-dropdown-arrow"></span>
					</label>
					<div class="iiskin-dropdown-content mw-portlet-body">
						   <ul {{{html-user-language-attributes}}}>
							   {{{html-items}}}
							   {{! Remove Talk from user menu via CSS or JS, ideally filter here if possible }}
						   </ul>
						{{{html-after-portal}}}
					</div>
				</div>
				{{/data-user-menu}}
			{{/data-portlets}}
		</div>
	</div>
</div>
