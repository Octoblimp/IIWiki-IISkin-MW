{
	"name": "IISkin",
	"version": "1.0.0",
	"author": [
		"IIWiki Contributors"
	],
	"url": "https://iiwiki.com",
	"descriptionmsg": "iiskin-desc",
	"namemsg": "skinname-iiskin",
	"license-name": "GPL-2.0-or-later",
	"type": "skin",
	"requires": {
		"MediaWiki": ">= 1.43.0"
	},
	"ValidSkinNames": {
		"iiskin": {
			"class": "MediaWiki\\Skins\\IISkin\\IISkin",
			"args": [
				{
					"name": "iiskin",
					"responsive": true,
					"toc": true,
					"messages": [
						"sitetitle",
						"search",
						"searcharticle",
						"searchbutton",
						"tagline",
						"navigation",
						"navigation-heading",
						"personaltools",
						"toolbox",
						"otherlanguages",
						"jumpto",
						"jumptonavigation",
						"jumptosearch",
						"views",
						"actions",
						"notloggedin",
						"iiskin-toggle-sidebar"
					]
				}
			]
		}
	},
	"MessagesDirs": {
		"IISkin": [
			"i18n"
		]
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Skins\\IISkin\\": "includes/"
	},
	"ResourceModules": {
		"skins.iiskin.styles": {
			"class": "MediaWiki\\ResourceLoader\\SkinModule",
			"features": {
				"normalize": true,
				"elements": true,
				"content": true,
				"content-media": true,
				"interface": true,
				"interface-category": true,
				"interface-message-box": true,
				"logo": true,
				"toc": true
			},
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": [
				"resources/skins.iiskin.styles/main.less"
			]
		},
		"skins.iiskin.js": {
			"targets": [
				"desktop",
				"mobile"
			],
			"scripts": [
				"resources/skins.iiskin.js/main.js"
			],
			"dependencies": [
				"mediawiki.util",
				"mediawiki.page.ready"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "IISkin"
	},
	"ResourceModuleSkinStyles": {
		"iiskin": {
			"+ext.echo.styles.badge": "resources/skins.iiskin.styles/ext.echo.less",
			"+mediawiki.action.view.postEdit": "resources/skins.iiskin.styles/mediawiki.action.view.postEdit.less"
		}
	},
	"ConfigRegistry": {
		"iiskin": "GlobalVarConfig::newInstance"
	},
	"config": {
		"IISkinShowFooterIcons": {
			"value": true,
			"description": "Whether to show footer icons"
		}
	},
	"SkinLessImportPaths": {
		"iiskin": "resources/mediawiki.less"
	},
	"manifest_version": 2
}
